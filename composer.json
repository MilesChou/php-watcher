{
    "name": "watcher/watcher",
    "description": "A simple watcher library written by PHP.",
    "type": "library",
    "license": "MIT License",
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5 | >=7.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 <=5.7",
        "pimple/pimple": "^3.0",
        "squizlabs/php_codesniffer": "^2.7",
        "codacy/coverage": "^1.4"
    },
    "suggest": {
        "ext-inotify": "Linux kernel subsystem, reports fs changes to applications."
    },
    "autoload": {
        "psr-4": {
            "Watcher\\": "src"
        }
    },
    "scripts": {
        "test": [
            "php vendor/bin/phpcs",
            "php vendor/bin/phpunit"
        ]
    }
}
